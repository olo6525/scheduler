<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#494949</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_icon</item>
    </style>


    <style name="box_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="time">
        <item name="android:background">@drawable/time1</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="day">
        <item name="android:background">@drawable/day1</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="class_info_title">
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="class_info_contents">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="class_info_btn">
        <item name="android:background">@drawable/class_info_btn</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="add_style">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/class_info_btn</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toggle_box_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/add_class_button1</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="color_select">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/add_class_button1</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>


</resources>
